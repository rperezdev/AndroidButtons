<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="90dip" />
            <stroke android:width="1dip" android:color="#AAAA0061" />
            <gradient
                android:gradientRadius="10dp"
                android:type="radial"
                android:startColor="#FFFF4081"
                android:endColor="#AAAA0061" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="90dip" />
            <stroke android:width="1dip" android:color="#FFFF4081" />
            <gradient android:angle="-90" android:startColor="#FFFF4081" android:endColor="#FFFF4081" />
        </shape>
    </item>
</selector>