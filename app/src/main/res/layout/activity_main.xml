<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.buttons.lacueva.krakosky.lacuevabuttons.MainActivity">


    <GridView
        android:id="@+id/grid_soundbuttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:columnWidth="100dp"
        android:horizontalSpacing="5dp"
        android:numColumns="auto_fit"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="7dp">
    </GridView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_add_soundbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:focusable="true"
        app:borderWidth="0dp"
        app:elevation="2dp"
        app:fabSize="normal"
        app:rippleColor="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_menu_compass" />

    <RelativeLayout
        android:id="@+id/layout_fragment_create_button"
        android:layout_width="match_parent"
        android:layout_height="550px"
        android:elevation="5dp"
        android:visibility="gone"
        android:background="@drawable/background_create_button_fragment"
        android:layout_alignParentBottom="true">

    </RelativeLayout>




</RelativeLayout>
